{
  "name": "gloomhaven_sc_backend",
  "version": "1.0.0",
  "description": "The backend API for the unofficial Gloomhaven Scenario Editor",
  "main": "app.js",
  "private": true,
  "scripts": {
    "prestart": "lint .",
    "start": "npm run babel -- src/app.js",
    "dev": "nodemon --exec npm start",
    "babel": "babel-node",
    "initDB": "babel-node database_init.js",
    "build": "babel -w src/ -d build -s",
    "lint": "eslint ./",
    "pretest": "npm run test:clean && npm run lint",
    "test:clean": "rimraf ./coverage",
    "test": "NODE_CONFIG_STRICT_MODE=false jest --coverage",
    "test:watch": "jest --coverage --watch",
    "coveralls": "jest --coverage --runInBand && cat ./coverage/lcov.info | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/on3iro/Gloomhaven-SC-backend.git"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-0"
    ]
  },
  "keywords": [
    "Gloomhaven",
    "Scenario",
    "Creator",
    "Backend"
  ],
  "author": "Theo Salzmann",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/on3iro/Gloomhaven-SC-backend/issues"
  },
  "jest": {
    "modulePaths": [
      "src"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "config"
    ],
    "moduleFileExtensions": [
      "js"
    ],
    "collectCoverageFrom": [
      "**/src/**/*.{js}",
      "!**/config/**/*.{js}"
    ],
    "coverageReporters": [
      "json",
      "lcov",
      "text"
    ]
  },
  "homepage": "https://github.com/on3iro/Gloomhaven-SC-backend#readme",
  "dependencies": {
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-stage-0": "^6.22.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.16.0",
    "config": "^1.25.1",
    "cors": "^2.8.1",
    "crypto": "0.0.3",
    "express": "^4.14.1",
    "helmet": "^3.4.0",
    "jsonwebtoken": "^7.2.1",
    "morgan": "^1.8.0",
    "passport": "^0.3.2",
    "passport-jwt": "^2.2.1",
    "passport-local": "^1.0.0",
    "rethinkdb": "^2.3.3",
    "thinky": "^2.3.8"
  },
  "devDependencies": {
    "babel-cli": "^6.22.2",
    "babel-eslint": "^7.1.1",
    "babel-jest": "^19.0.0",
    "babel-preset-env": "^1.1.8",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-stage-0": "^6.22.0",
    "babel-watch": "^2.0.6",
    "coveralls": "^2.12.0",
    "eslint": "^3.14.1",
    "jest": "^18.1.0",
    "nodemon": "^1.11.0"
  }
}
